<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Magidesk.Views.AuthorizationCodeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d"
    Title="{Binding Title}"
    PrimaryButtonText="Submit"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <Grid RowSpacing="16" Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Select Card Type:" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <RadioButtons MaxColumns="2">
                <RadioButton Content="Visa" IsChecked="True" Tag="Visa" Checked="CardType_Checked"/>
                <RadioButton Content="Master Card" Tag="MasterCard" Checked="CardType_Checked"/>
                <RadioButton Content="Amex" Tag="Amex" Checked="CardType_Checked"/>
                <RadioButton Content="Discover" Tag="Discover" Checked="CardType_Checked"/>
            </RadioButtons>
        </StackPanel>

        <TextBox Grid.Row="1" 
                 Header="Authorization Code" 
                 Text="{Binding AuthCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 PlaceholderText="Enter Auth Code"
                 HorizontalAlignment="Stretch"/>
    </Grid>
</ContentDialog>
