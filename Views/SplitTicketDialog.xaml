<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Magidesk.Presentation.Views.SplitTicketDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d"
    Title="Split Ticket"
    PrimaryButtonText="Split"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    CornerRadius="8"
    MinWidth="800" MinHeight="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
             <RowDefinition Height="Auto"/>
             <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Original Ticket Pane -->
        <TextBlock Text="Original Ticket" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.OriginalOrderLines}" SelectedItem="{x:Bind ViewModel.SelectedOriginalLine, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                     <StackPanel Orientation="Horizontal" Spacing="8">
                         <TextBlock Text="{Binding MenuItemName}" FontWeight="SemiBold"/>
                         <TextBlock Text="{Binding TotalAmount}" Foreground="Gray"/>
                     </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Move Buttons -->
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Spacing="12" Margin="12,0">
            <Button Content="Move &gt;" Command="{x:Bind ViewModel.MoveRightCommand}"/>
            <Button Content="&lt; Move" Command="{x:Bind ViewModel.MoveLeftCommand}"/>
        </StackPanel>

        <!-- New Ticket Pane -->
        <TextBlock Grid.Column="2" Text="New Ticket" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
        <ListView Grid.Column="2" Grid.Row="1" ItemsSource="{x:Bind ViewModel.NewOrderLines}" SelectedItem="{x:Bind ViewModel.SelectedNewLine, Mode=TwoWay}">
            <ListView.ItemTemplate>
                 <DataTemplate>
                     <StackPanel Orientation="Horizontal" Spacing="8">
                         <TextBlock Text="{Binding MenuItemName}" FontWeight="SemiBold"/>
                         <TextBlock Text="{Binding TotalAmount}" Foreground="Gray"/>
                     </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentDialog>
