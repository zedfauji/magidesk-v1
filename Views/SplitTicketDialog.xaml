<ContentDialog
    x:Class="Magidesk.Views.SplitTicketDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Magidesk.Presentation.Converters"
    mc:Ignorable="d"
    Title="Split Ticket"
    PrimaryButtonText="Confirm Split"
    CloseButtonText="Cancel"
    PrimaryButtonCommand="{Binding ConfirmSplitCommand}"
    PrimaryButtonCommandParameter="{Binding RelativeSource={RelativeSource Self}}"
    MaxWidth="800">

    <ContentDialog.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    </ContentDialog.Resources>

    <Grid ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Original Ticket -->
        <Grid Grid.Column="0" RowSpacing="10">
            <TextBlock Text="Original Ticket" Style="{StaticResource SubtitleTextBlockStyle}"/>
            
            <ListView ItemsSource="{Binding OriginalItems}" 
                      SelectionMode="Extended"
                      Name="OriginalListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Quantity}" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding MenuItemName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="2" Text="{Binding TotalAmount, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <TextBlock Text="Remaining Total:"/>
                <TextBlock Text="{Binding TotalAmountOriginal, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Middle: Action Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="10">
            <Button Content="Move &gt;" 
                    Command="{Binding MoveToSplitCommand}"
                    CommandParameter="{Binding ElementName=OriginalListView, Path=SelectedItems}"/>
            <Button Content="&lt; Move" 
                    Command="{Binding MoveToOriginalCommand}"
                    CommandParameter="{Binding ElementName=NewListView, Path=SelectedItems}"/>
        </StackPanel>

        <!-- Right: New (Split) Ticket -->
        <Grid Grid.Column="2" RowSpacing="10">
            <TextBlock Text="New Ticket" Style="{StaticResource SubtitleTextBlockStyle}"/>

            <ListView ItemsSource="{Binding SplitItems}" 
                      SelectionMode="Extended"
                      Name="NewListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Quantity}" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding MenuItemName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="2" Text="{Binding TotalAmount, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <TextBlock Text="New Total:"/>
                <TextBlock Text="{Binding TotalAmountSplit, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Error / Info Bar (Botttom overlay or separate row depending on pref, sticking to bottom of grid for now) -->
        <InfoBar Grid.ColumnSpan="3" VerticalAlignment="Bottom"
                 IsOpen="{Binding HasError}"
                 Severity="Error"
                 Message="{Binding ErrorMessage}"
                 IsClosable="True" />
    </Grid>
</ContentDialog>
