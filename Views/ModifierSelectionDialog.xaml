<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Magidesk.Presentation.Views.ModifierSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.Presentation.ViewModels"
    xmlns:converters="using:Magidesk.Presentation.Converters"
    mc:Ignorable="d"
    Title="Select Modifiers"
    PrimaryButtonText="Done"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    CornerRadius="8"
    MinWidth="600" MinHeight="400">

    <ContentDialog.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Pivot ItemsSource="{x:Bind ViewModel.ModifierGroups}" HeaderFocusVisualPlacement="ItemHeaders">
            <Pivot.HeaderTemplate>
                <DataTemplate x:DataType="viewmodels:ModifierGroupViewModel">
                    <TextBlock Text="{x:Bind Group.Name}" FontSize="16"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <Pivot.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ModifierGroupViewModel">
                    <Grid Padding="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Group Instructions / Limits -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                            <TextBlock Text="{x:Bind Group.Description}" FontStyle="Italic" Foreground="Gray"/>
                            <TextBlock Text="{x:Bind Group.MinSelections, Mode=OneWay}" Foreground="Red" 
                                       Visibility="{x:Bind Group.IsRequired, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="Required" Foreground="Red" 
                                       Visibility="{x:Bind Group.IsRequired, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <GridView ItemsSource="{x:Bind Modifiers}" SelectionMode="None">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:ModifierViewModel">
                                    <ToggleButton IsChecked="{x:Bind IsSelected, Mode=TwoWay}" 
                                                  Content="{x:Bind DisplayName}"
                                                  Margin="4" MinWidth="120" MinHeight="60"/>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </DataTemplate>
            </Pivot.ItemTemplate>
        </Pivot>

        <!-- Validation Error Message -->
        <TextBlock Grid.Row="1" 
                   Text="{x:Bind ViewModel.ValidationError, Mode=OneWay}" 
                   Foreground="Red" FontWeight="Bold" Margin="0,12,0,0"
                   Visibility="{x:Bind ViewModel.HasValidationError, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</ContentDialog>
