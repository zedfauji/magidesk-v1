<Page
    x:Class="Magidesk.Presentation.Views.SalesReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels"
    xmlns:dto="using:Magidesk.Application.DTOs.Reports"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Reports" Style="{StaticResource TitleTextBlockStyle}" Margin="16,24,16,16"/>
            
            <ListView Grid.Row="1" 
                      ItemsSource="{x:Bind ViewModel.ReportTypes}" 
                      SelectedItem="{x:Bind ViewModel.SelectedReportType, Mode=TwoWay}"
                      Padding="0,0,0,16">
                <!-- Simple Item Template -->
            </ListView>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Column="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header / Toolbar -->
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Start Date" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                    <CalendarDatePicker Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" Width="150"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="End Date" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                    <CalendarDatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" Width="150"/>
                </StackPanel>
                
                <Button Command="{x:Bind ViewModel.LoadReportCommand}" 
                        Style="{StaticResource AccentButtonStyle}"
                        VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE768;" FontSize="16"/>
                        <TextBlock Text="Run Report"/>
                    </StackPanel>
                </Button>
                
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" VerticalAlignment="Bottom"/>
                
                <TextBlock Text="{x:Bind ViewModel.Error, Mode=OneWay}" 
                           Foreground="Red" 
                           VerticalAlignment="Bottom"
                           Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Report Content -->
            <Grid Grid.Row="1">
                
                <!-- SALES SUMMARY -->
                <Grid Visibility="{x:Bind ViewModel.IsSalesSummaryVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Sales Summary" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <StackPanel Grid.Row="1" Spacing="24">
                        <!-- Totals Section -->
                        <Border BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Gross Sales" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesSummary.Totals.TotalGrossSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Net Sales" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesSummary.Totals.TotalNetSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Total Tax" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesSummary.Totals.TotalTax, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Categories List -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Header Row -->
                            <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Category" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="1" Text="Items" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="2" Text="Gross" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="3" Text="Net" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="4" Text="Tax" Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                            
                            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.SalesSummary.Categories, Mode=OneWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="dto:SalesCategoryDto">
                                        <Grid Padding="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind MainItemCount}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{x:Bind GrossSales}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{x:Bind NetSales}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="{x:Bind TaxAmount}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- LABOR REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsLaborReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Margin="0,0,0,16">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="Labor Cost Analysis" Style="{StaticResource SubtitleTextBlockStyle}"/>
                         <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                             <TextBlock>
                                 <Run Text="Total Labor: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.LaborReport.TotalLaborCost, Mode=OneWay, FallbackValue='$0.00'}"/>
                             </TextBlock>
                             <TextBlock>
                                 <Run Text="Labor %: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.LaborReport.LaborCostPercentage, Mode=OneWay, FallbackValue='0.0%'}"/>
                             </TextBlock>
                         </StackPanel>
                    </Grid>
                    
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                         <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Staff" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="1" Text="Role" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="2" Text="Hours" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="3" Text="Rate" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="4" Text="Cost" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="5" Text="Sales" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="6" Text="Sales/Hr" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.LaborReport.StaffLabor, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:LaborCostItemDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                         <TextBlock Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind RoleName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind TotalHours}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind HourlyRate}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind TotalCost}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind TotalSales}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="{x:Bind SalesPerLaborHour}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

                <!-- DELIVERY REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsDeliveryReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Margin="0,0,0,16">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="Delivery Performance" Style="{StaticResource SubtitleTextBlockStyle}"/>
                         <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                             <TextBlock>
                                 <Run Text="Total Deliveries: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.DeliveryReport.TotalDeliveries, Mode=OneWay}"/>
                             </TextBlock>
                             <TextBlock>
                                 <Run Text="Avg Time: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.DeliveryReport.AverageDeliveryTimeMinutes, Mode=OneWay, FallbackValue='0'}"/>
                                 <Run Text="min"/>
                             </TextBlock>
                         </StackPanel>
                    </Grid>
                    
                     <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                         <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Driver" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="1" Text="Count" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="2" Text="Total Sales" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="3" Text="Avg Time" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="4" Text="Tips" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.DeliveryReport.DriverStats, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:DriverPerformanceDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind DriverName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind DeliveryCount}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind TotalSales}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind AverageTimeMinutes}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind TipsAmount}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Page>
