                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

                <!-- LABOR REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsLaborReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Margin="0,0,0,16">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="Labor Cost Analysis" Style="{StaticResource SubtitleTextBlockStyle}"/>
                         <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                             <TextBlock>
                                 <Run Text="Total Labor: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.LaborReport.TotalLaborCost, Mode=OneWay, FallbackValue='$0.00'}"/>
                             </TextBlock>
                             <TextBlock>
                                 <Run Text="Labor %: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.LaborReport.LaborCostPercentage, Mode=OneWay, FallbackValue='0.0%'}"/>
                             </TextBlock>
                         </StackPanel>
                    </Grid>
                    
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                         <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Staff" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="1" Text="Role" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="2" Text="Hours" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="3" Text="Rate" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="4" Text="Cost" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="5" Text="Sales" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="6" Text="Sales/Hr" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.LaborReport.StaffLabor, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:LaborCostItemDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                         <TextBlock Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind RoleName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind TotalHours}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind HourlyRate}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind TotalCost}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind TotalSales}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="{x:Bind SalesPerLaborHour}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

                <!-- DELIVERY REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsDeliveryReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Margin="0,0,0,16">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="Delivery Performance" Style="{StaticResource SubtitleTextBlockStyle}"/>
                         <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                             <TextBlock>
                                 <Run Text="Total Deliveries: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.DeliveryReport.TotalDeliveries, Mode=OneWay}"/>
                             </TextBlock>
                             <TextBlock>
                                 <Run Text="Avg Time: " FontWeight="SemiBold"/>
                                 <Run Text="{x:Bind ViewModel.DeliveryReport.AverageDeliveryTimeMinutes, Mode=OneWay, FallbackValue='0'}"/>
                                 <Run Text="min"/>
                             </TextBlock>
                         </StackPanel>
                    </Grid>
                    
                     <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                         <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Driver" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="1" Text="Count" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="2" Text="Total Sales" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="3" Text="Avg Time" Style="{StaticResource HeaderTextStyle}"/>
                             <TextBlock Grid.Column="4" Text="Tips" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.DeliveryReport.DriverStats, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:DriverPerformanceDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind DriverName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind DeliveryCount}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind TotalSales}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind AverageTimeMinutes}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind TipsAmount}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
                
                <!-- TIP REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsTipReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Tip Report" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Summary Section -->
                    <Border Grid.Row="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,0,0,16">
                        <Grid ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="Total Tips" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.TotalTips, Mode=OneWay, FallbackValue='$0.00'}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Tips Paid" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.PaidTips, Mode=OneWay, FallbackValue='$0.00'}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tips Due" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.TipsDue, Mode=OneWay, FallbackValue='$0.00'}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Total Auto Grat" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.TotalAutoGratuity, Mode=OneWay, FallbackValue='$0.00'}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Cash Tips Count" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.CashTipsCount, Mode=OneWay, FallbackValue='0'}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Cash Tips Amount" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.CashTipsAmount, Mode=OneWay, FallbackValue='$0.00'}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="2">
                                <TextBlock Text="Charged Tips Count" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.ChargedTipsCount, Mode=OneWay, FallbackValue='0'}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="3">
                                <TextBlock Text="Charged Tips Amount" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TipReport.ChargedTipsAmount, Mode=OneWay, FallbackValue='$0.00'}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Server Summary -->
                    <Grid Grid.Row="2" Margin="0,0,0,24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Summary by Server" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Server" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="1" Text="Tickets" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="2" Text="Total Sales" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="3" Text="Cash" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="4" Text="CC" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="5" Text="AutoGrat" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="6" Text="Total Tips" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="7" Text="Tip %" Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.TipReport.ServerSummaries, Mode=OneWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="dto:TipReportServerSummaryDto">
                                        <Grid Padding="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind ServerName}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind TicketCount}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{x:Bind TotalSales}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="3" Text="{x:Bind CashTips}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="4" Text="{x:Bind ChargedTips}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="5" Text="{x:Bind AutoGratuity}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            <TextBlock Grid.Column="6" Text="{x:Bind TotalTips}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold"/>
                                            <TextBlock Grid.Column="7" Text="{x:Bind TipPercentage}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                    
                    <!-- Details List -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ticket #" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Sale Type" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="Server" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="3" Text="Total" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="4" Text="Tip" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="5" Text="Status" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.TipReport.Details, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:TipReportDataDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind TicketId}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind SaleType}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind ServerName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind TicketTotal}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind Tips}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{ThemeResource SystemAccentColor}"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind IsPaid, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Paid:Due'}" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   Foreground="{x:Bind IsPaid, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Green:Orange'}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

                <!-- ATTENDANCE REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsAttendanceReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Attendance Report" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                     <Border Grid.Row="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,0,0,16">
                         <StackPanel Orientation="Horizontal" Spacing="24">
                            <StackPanel>
                                <TextBlock Text="Total Shifts" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.AttendanceReport.TotalShifts, Mode=OneWay, FallbackValue='0'}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Total Hours" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.AttendanceReport.TotalHours, Mode=OneWay, FallbackValue='0.00'}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                         </StackPanel>
                     </Border>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Employee" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Role" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="Clock In" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="3" Text="Clock Out" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="4" Text="Hours" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="5" Text="Shift" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.AttendanceReport.Items, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:AttendanceReportItemDto">
                                    <Grid Padding="12,8" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Role}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind ClockInTime}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind ClockOutTime, TargetNullValue='-'}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind HoursWorked}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind ShiftName}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

                <!-- CASH OUT REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsCashOutReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Cash Out Report" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

                    <Border Grid.Row="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Spacing="24">
                            <StackPanel>
                                <TextBlock Text="Total Cash Sales" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CashOutReport.TotalCashSales, Mode=OneWay, TargetNullValue='$0.00'}" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold"/>
                            </StackPanel>
                            <Border Width="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
                            <StackPanel>
                                <TextBlock Text="Total Charged Tips" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CashOutReport.TotalChargedTips, Mode=OneWay, TargetNullValue='$0.00'}" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold"/>
                            </StackPanel>
                            <Border Width="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
                            <StackPanel>
                                <TextBlock Text="Total Net Due" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CashOutReport.TotalNetDue, Mode=OneWay, TargetNullValue='$0.00'}" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Server" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Tickets" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="Cash Sales" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="3" Text="Charged Tips" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="4" Text="Net Due" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>

                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.CashOutReport.Items, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:CashOutReportItemDto">
                                    <Grid Padding="12,8" BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind TicketCount}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind CashSales}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind ChargedTips}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind NetDue}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Page>
