<Page
    x:Class="Magidesk.Presentation.Views.SalesReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels"
    xmlns:dto="using:Magidesk.Application.DTOs.Reports"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{Binding Localization[RPT_Title], Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" Margin="16,24,16,16"/>
            
            <ListView Grid.Row="1" 
                      ItemsSource="{x:Bind ViewModel.ReportTypes}" 
                      SelectedItem="{x:Bind ViewModel.SelectedReportType, Mode=TwoWay}"
                      Padding="0,0,0,16">
                <!-- Simple Item Template -->
            </ListView>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Column="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header / Toolbar -->
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{Binding Localization[RPT_StartDate], Mode=OneWay}" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                    <CalendarDatePicker Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" Width="150"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="{Binding Localization[RPT_EndDate], Mode=OneWay}" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                    <CalendarDatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Bottom">
                    <Button Content="{Binding Localization[RPT_Today], Mode=OneWay}" Command="{x:Bind ViewModel.SetDateRangeCommand}" CommandParameter="today"/>
                    <Button Content="{Binding Localization[RPT_Yesterday], Mode=OneWay}" Command="{x:Bind ViewModel.SetDateRangeCommand}" CommandParameter="yesterday"/>
                    <Button Content="{Binding Localization[RPT_Week], Mode=OneWay}" Command="{x:Bind ViewModel.SetDateRangeCommand}" CommandParameter="week"/>
                    <Button Content="{Binding Localization[RPT_Month], Mode=OneWay}" Command="{x:Bind ViewModel.SetDateRangeCommand}" CommandParameter="month"/>
                </StackPanel>
                
                <Button Command="{x:Bind ViewModel.LoadReportCommand}" 
                        Style="{StaticResource AccentButtonStyle}"
                        VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE768;" FontSize="16"/>
                        <TextBlock Text="{Binding Localization[RPT_RunReport], Mode=OneWay}"/>
                    </StackPanel>
                </Button>
                
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" VerticalAlignment="Bottom"/>
                
                <TextBlock Text="{x:Bind ViewModel.Error, Mode=OneWay}" 
                           Foreground="Red" 
                           VerticalAlignment="Bottom"
                           Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Report Content -->
            <Grid Grid.Row="1">
                
                <!-- SALES SUMMARY -->
                <Grid Visibility="{x:Bind ViewModel.IsSalesSummaryVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="{Binding Localization[RPT_SalesSummary], Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <StackPanel Grid.Row="1" Spacing="24">
                        <!-- Totals Section -->
                        <Border BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Localization[RPT_GrossSales], Mode=OneWay}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesSummary.Totals.TotalGrossSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Localization[RPT_NetSales], Mode=OneWay}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesSummary.Totals.TotalNetSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="{Binding Localization[RPT_TotalTax], Mode=OneWay}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesSummary.Totals.TotalTax, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Categories List -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Header Row -->
                            <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Localization[RPT_Category], Mode=OneWay}" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="1" Text="{Binding Localization[RPT_Items], Mode=OneWay}" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="2" Text="{Binding Localization[RPT_Gross], Mode=OneWay}" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="3" Text="{Binding Localization[RPT_Net], Mode=OneWay}" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="4" Text="{Binding Localization[RPT_Tax], Mode=OneWay}" Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                            
                            <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.SalesSummary.Categories, Mode=OneWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="dto:SalesCategoryDto">
                                        <Grid Padding="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind MainItemCount}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{x:Bind GrossSales}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{x:Bind NetSales}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="{x:Bind TaxAmount}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- SALES DETAIL -->
                <Grid Visibility="{x:Bind ViewModel.IsSalesDetailVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Sales Detail" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Totals Section -->
                    <Border Grid.Row="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,0,0,16">
                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Items" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.SalesDetail.Totals.TotalItems, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Gross Sales" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.SalesDetail.Totals.TotalGrossSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Discounts" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.SalesDetail.Totals.TotalDiscounts, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Net Sales" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.SalesDetail.Totals.TotalNetSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Total Tax" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.SalesDetail.Totals.TotalTax, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Detail Items List -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Time" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Ticket" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="Item" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="3" Text="Category" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="4" Text="Qty" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="5" Text="Unit Price" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="6" Text="Gross" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="7" Text="Net" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="8" Text="User" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.SalesDetail.Items, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:SalesDetailItemDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind TicketTime}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind TicketNumber}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind ItemName}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind CategoryName}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind Quantity}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind UnitPrice}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="6" Text="{x:Bind GrossAmount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="7" Text="{x:Bind NetAmount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="8" Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>

                <!-- SALES BALANCE -->
                <Grid Visibility="{x:Bind ViewModel.IsSalesBalanceVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Sales Balance" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

                    <StackPanel Grid.Row="1" Spacing="16">
                        <Border BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16">
                            <Grid ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Gross Sales" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesBalance.Sales.TotalGrossSales, Mode=OneWay, FallbackValue=0}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Net Collected" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesBalance.Payments.NetCollected, Mode=OneWay, FallbackValue=0}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Variance" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesBalance.Variance, Mode=OneWay, FallbackValue=0}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Tickets" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.SalesBalance.Sales.TicketCount, Mode=OneWay, FallbackValue=0}" Style="{StaticResource TitleTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Payments by Type" FontWeight="SemiBold" Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Type" Style="{StaticResource HeaderTextStyle}"/>
                                    <TextBlock Grid.Column="1" Text="Amount" Style="{StaticResource HeaderTextStyle}"/>
                                    <TextBlock Grid.Column="2" Text="Count" Style="{StaticResource HeaderTextStyle}"/>
                                </Grid>

                                <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.SalesBalance.Payments.ByType, Mode=OneWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="dto:PaymentTypeSummaryDto">
                                            <Grid Padding="0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{x:Bind PaymentType}" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind Amount}" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{x:Bind Count}" VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- EXCEPTIONS REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsExceptionsReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Exceptions" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel Spacing="24">
                            <StackPanel>
                                <TextBlock Text="Voids" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ListView ItemsSource="{x:Bind ViewModel.ExceptionsReport.Voids, Mode=OneWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="dto:VoidItemDto">
                                            <Grid Padding="0,8" ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{x:Bind Date}"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind TicketNumber}"/>
                                                <TextBlock Grid.Column="2" Text="{x:Bind Amount}"/>
                                                <TextBlock Grid.Column="3" Text="{x:Bind VoidedBy}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Refunds" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ListView ItemsSource="{x:Bind ViewModel.ExceptionsReport.Refunds, Mode=OneWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="dto:RefundItemDto">
                                            <Grid Padding="0,8" ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{x:Bind Date}"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind TicketNumber}"/>
                                                <TextBlock Grid.Column="2" Text="{x:Bind Amount}"/>
                                                <TextBlock Grid.Column="3" Text="{x:Bind PaymentType}"/>
                                                <TextBlock Grid.Column="4" Text="{x:Bind Reason}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Discounts" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ListView ItemsSource="{x:Bind ViewModel.ExceptionsReport.Discounts, Mode=OneWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="dto:DiscountItemDto">
                                            <Grid Padding="0,8" ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{x:Bind Date}"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind TicketNumber}"/>
                                                <TextBlock Grid.Column="2" Text="{x:Bind Name}"/>
                                                <TextBlock Grid.Column="3" Text="{x:Bind Amount}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- CREDIT CARD REPORT -->
                <Grid Visibility="{x:Bind ViewModel.IsCreditCardReportVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8" Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Credit Card Report" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Totals Section -->
                    <Border Grid.Row="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,0,0,16">
                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Total Transactions" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CreditCardReport.Totals.TotalTransactions, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Total Sales" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CreditCardReport.Totals.TotalSales, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Total Tips" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CreditCardReport.Totals.TotalTips, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Voids" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CreditCardReport.Totals.TotalVoids, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Net Amount" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CreditCardReport.Totals.NetAmount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Transactions List -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header Row -->
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Time" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Ticket" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="Card Type" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="3" Text="Card Last4" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="4" Text="Auth Code" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="5" Text="Amount" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="6" Text="Tip" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="7" Text="Type" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="8" Text="Status" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                        
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.CreditCardReport.Transactions, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:CreditCardTransactionDto">
                                    <Grid Padding="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind TransactionTime}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind TicketNumber}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{x:Bind CardType}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind CardLast4}" VerticalAlignment="Center" FontFamily="Consolas"/>
                                        <TextBlock Grid.Column="4" Text="{x:Bind AuthorizationCode}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="{x:Bind Amount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="6" Text="{x:Bind TipAmount}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="7" Text="{x:Bind TransactionType}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="8" Text="{x:Bind TransactionStatus}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
