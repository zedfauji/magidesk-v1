<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.CustomerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="using:Magidesk.Presentation.Views.Components"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Bind ViewModel.Title, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

        <!-- Toolbar / Search -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <components:CustomerSearchControl x:Name="CustomerSearch" 
                                              Grid.Column="0" 
                                              Width="400" 
                                              HorizontalAlignment="Left"
                                              SelectedCustomer="{x:Bind ViewModel.SelectedCustomerDto, Mode=TwoWay}"/>
                            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" Margin="12,0,0,0">
                <Button Content="New Customer" Command="{x:Bind ViewModel.AddCommand}" Style="{StaticResource AccentButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Add"/>
                                <TextBlock Text="New Customer"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button Command="{x:Bind ViewModel.LoadCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Refresh"/>
                                <TextBlock Text="Reload"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Split View -->
        <Grid Grid.Row="2" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- List Panel -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Customer List" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                
                <Border Grid.Row="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4">
                    <ListView ItemsSource="{x:Bind ViewModel.Customers, Mode=OneWay}" 
                              SelectedItem="{x:Bind ViewModel.SelectedCustomer, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Padding="12">
                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8" Opacity="0.7">
                                        <SymbolIcon Symbol="Phone" RenderTransformOrigin="0.5,0.5">
                                            <SymbolIcon.RenderTransform>
                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                            </SymbolIcon.RenderTransform>
                                        </SymbolIcon>
                                        <TextBlock Text="{Binding Phone}" VerticalAlignment="Center" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Email}" Opacity="0.5" FontSize="11" Visibility="{Binding Email, Converter={StaticResource StringVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>

            <!-- Detail Panel / Editor -->
            <Border Grid.Column="1" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="24">
                <ScrollViewer>
                    <StackPanel Spacing="20" MaxWidth="600" HorizontalAlignment="Left">
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                   Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        
                        <!-- Contact Info Section -->
                        <TextBlock Text="Contact Information" FontWeight="Bold" Margin="0,8,0,0"/>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Header="First Name" Text="{x:Bind ViewModel.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Column="1" Header="Last Name" Text="{x:Bind ViewModel.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        
                        <TextBox Header="Phone Number" Text="{x:Bind ViewModel.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Header="Email Address" Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <!-- Address Section -->
                        <TextBlock Text="Address Details" FontWeight="Bold" Margin="0,8,0,0"/>
                        <TextBox Header="Street Address" Text="{x:Bind ViewModel.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Header="City" Text="{x:Bind ViewModel.City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Column="1" Header="Postal Code" Text="{x:Bind ViewModel.PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <!-- Status Section -->
                        <ToggleSwitch Header="Active Status" IsOn="{x:Bind ViewModel.IsActive, Mode=TwoWay}"/>
                        
                        <!-- Statistics (Read Only) -->
                        <StackPanel Spacing="4" Visibility="{x:Bind ViewModel.HasSelection, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Activity Summary" FontWeight="Bold" Margin="0,8,0,0"/>
                            <TextBlock Opacity="0.7">
                                <Run Text="Total Visits: "/>
                                <Run Text="{x:Bind ViewModel.SelectedCustomer.TotalVisits, Mode=OneWay}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock Opacity="0.7">
                                <Run Text="Total Spent: "/>
                                <Run Text="{x:Bind ViewModel.SelectedCustomer.TotalSpent.Amount, Mode=OneWay}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock Opacity="0.7">
                                <Run Text="Last Visit: "/>
                                <Run Text="{x:Bind ViewModel.SelectedCustomer.LastVisitAt, Mode=OneWay}" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>

                        <Button Content="Save Customer" 
                                Command="{x:Bind ViewModel.SaveCommand}" 
                                Style="{StaticResource AccentButtonStyle}" 
                                MinWidth="120" Margin="0,20,0,0"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Grid Grid.RowSpan="3" Background="#40000000" 
              Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
             <ProgressRing IsActive="True" Width="64" Height="64"/>
        </Grid>
    </Grid>
</Page>
