<Page
    x:Class="Magidesk.Presentation.Views.DiscountManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:Magidesk.Application.DTOs"
    mc:Ignorable="d"
    x:Name="RootPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="{x:Bind ViewModel.Title}" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Manage discount rules and happy hour schedules." Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Toolbar -->
        <CommandBar Grid.Row="1" DefaultLabelPosition="Right" Background="Transparent" Padding="0">
            <AppBarButton Icon="Refresh" Label="Refresh" Command="{x:Bind ViewModel.LoadDiscountsCommand}"/>
            <!-- Future: Add/Edit Discount buttons -->
        </CommandBar>

        <!-- Discount List -->
        <ListView Grid.Row="2" 
                  ItemsSource="{x:Bind ViewModel.Discounts, Mode=OneWay}" 
                  SelectedItem="{x:Bind ViewModel.SelectedDiscount, Mode=TwoWay}"
                  SelectionMode="Single">
            <ListView.Header>
                <Grid Padding="12,0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Name" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Type" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Value" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Active" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="4" Text="Actions" FontWeight="SemiBold"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="dto:DiscountDto">
                    <Grid Padding="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel>
                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind CouponCode}" FontSize="12" Opacity="0.7" Visibility="{x:Bind CouponCode, Converter={StaticResource StringVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" Text="{x:Bind Type}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind DisplayValue}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="{x:Bind IsActive}" VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="4" Content="Schedule" 
                                Command="{Binding ElementName=RootPage, Path=ViewModel.ManageScheduleCommand}"
                                CommandParameter="{x:Bind}"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressRing Grid.Row="2" IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
