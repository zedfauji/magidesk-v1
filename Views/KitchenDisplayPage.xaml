<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.KitchenDisplayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE99A;" FontSize="24"/>
                <TextBlock Text="{Binding Localization[ViewTitle], Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                <ToggleButton IsChecked="{x:Bind ViewModel.IsHistoryMode, Mode=TwoWay}" Content="{Binding Localization[KD_History], Mode=OneWay}" />
                <TextBlock Text="{x:Bind ViewModel.LastUpdated, Mode=OneWay}" VerticalAlignment="Center" Foreground="Gray"/>
                <Button Command="{x:Bind ViewModel.RefreshCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                        <TextBlock Text="{Binding Localization[KD_Refresh], Mode=OneWay}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Orders Grid -->
        <GridView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Orders, Mode=OneWay}" SelectionMode="None">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0,0,12,12"/>
                    <Setter Property="MinWidth" Value="250"/>
                    <Setter Property="MaxWidth" Value="300"/>
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" BorderThickness="1" BorderBrush="#30000000">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Padding="12" CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{Binding TableNumber}" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="{Binding ServerName}" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding TimeAgo}" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <!-- Body -->
                        <ListView Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="None" Margin="0,8">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Background="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}" Width="24" Height="24" CornerRadius="12">
                                                <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" Margin="8,0,0,0"/>
                                        </Grid>
                                        <!-- Modifiers -->
                                        <TextBlock Text="{Binding Modifiers}" Margin="38,2,0,0" FontSize="12" FontStyle="Italic" Opacity="0.8" TextWrapping="Wrap" 
                                                   Visibility="{Binding Modifiers, Converter={StaticResource StringVisibilityConverter}}"/> 
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <!-- Footer / Bump Button -->
                        <Button Grid.Row="2" Content="{Binding ElementName=RootPage, Path=DataContext.Localization[KD_BumpOrder]}" HorizontalAlignment="Stretch" Margin="12" 
                                Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White"
                                Command="{Binding ElementName=RootPage, Path=ViewModel.BumpCommand}" 
                                CommandParameter="{Binding}"
                                Visibility="{Binding ElementName=RootPage, Path=ViewModel.IsHistoryMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Reverse}"/> 
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16" 
                    Visibility="{x:Bind ViewModel.Orders.Count, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Reverse}"> 
            <FontIcon Glyph="&#xE73E;" FontSize="64" Foreground="Gray"/>
            <TextBlock Text="{Binding Localization[KD_NoActiveOrders], Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Page>
