<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.OrderEntryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:Magidesk.Application.DTOs"
    xmlns:entities="using:Magidesk.Domain.Entities"
    xmlns:converters="using:Magidesk.Presentation.Converters"
    mc:Ignorable="d"
    Name="RootPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Ticket Panel -->
        <Grid Grid.Column="0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Ticket Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding Localization[OE_Title], Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock Text="{Binding Ticket.TicketNumber, Mode=OneWay}" 
                           FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                <TextBlock Text="{Binding GuestCountText, Mode=OneWay}" 
                           FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                 
                 <!-- Search Button (Triggers Dialog F-0034) -->
                 <Button Content="{Binding Localization[OE_SearchItems], Mode=OneWay}" HorizontalAlignment="Stretch" Command="{Binding SearchItemCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE721;"/>
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                 </Button>
                 
                 <!-- Session Info Panel (FE-A.15-02) -->
                 <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Visibility="{Binding HasActiveSession}">
                    <StackPanel Spacing="8">
                        <!-- Session Status Badge -->
                        <Border Background="{ThemeResource SystemFillColorSuccessBrush}"
                               CornerRadius="4"
                               Padding="8,4"
                               HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE768;" FontSize="14" Foreground="White"/>
                                <TextBlock Text="{Binding SessionStatusText}" 
                                          FontWeight="SemiBold" 
                                          FontSize="12"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Session Timer -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE916;" FontSize="16"/>
                            <TextBlock Text="{Binding SessionTimerText}" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      FontFamily="Consolas"/>
                        </StackPanel>
                        
                        <!-- Running Charge -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7EF;" FontSize="16"/>
                            <TextBlock Text="{Binding SessionRunningChargeText}" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                        </StackPanel>
                        
                        <!-- Session Start Time -->
                        <TextBlock Text="{Binding SessionStartTimeText}" 
                                  FontSize="11"
                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                 </Border>
                 
                 <Grid ColumnSpacing="8" RowSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Row 0: Start / End -->
                    <Button Grid.Row="0" Grid.Column="0" 
                           Content="Start Session" 
                           HorizontalAlignment="Stretch"
                           Command="{Binding StartSessionCommand}"
                           IsEnabled="{Binding CanStartSession}"
                           Background="Green"
                           Foreground="White">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" Foreground="White"/>
                                    <TextBlock Text="{Binding}" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button Grid.Row="0" Grid.Column="1" 
                           Content="End Session" 
                           HorizontalAlignment="Stretch"
                           Command="{Binding EndSessionCommand}"
                           IsEnabled="{Binding CanEndSession}"
                           Background="Red"
                           Foreground="White">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE71A;" Foreground="White"/>
                                    <TextBlock Text="{Binding}" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <!-- Row 1: Pause / Resume -->
                    <Button Grid.Row="1" Grid.Column="0" 
                           Content="Pause Session" 
                           HorizontalAlignment="Stretch"
                           Command="{Binding PauseSessionCommand}"
                           Visibility="{Binding ShowPauseButton, Converter={StaticResource BoolToVisibilityConverter}}"
                           Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE769;"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="0" 
                           Content="Resume Session" 
                           HorizontalAlignment="Stretch"
                           Command="{Binding ResumeSessionCommand}"
                           Visibility="{Binding ShowResumeButton, Converter={StaticResource BoolToVisibilityConverter}}"
                           Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                           Foreground="White">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;" Foreground="White"/>
                                    <TextBlock Text="{Binding}" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                 </Grid>
            </StackPanel>

            <!-- Order Lines -->
            <ListView Grid.Row="1" ItemsSource="{Binding OrderLines}" CornerRadius="4" Margin="0,12,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="dto:OrderLineDto">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Name and Modifiers -->
                            <StackPanel>
                                <TextBlock Text="{x:Bind MenuItemName}" FontWeight="SemiBold" TextWrapping="Wrap" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                 <ItemsControl ItemsSource="{x:Bind Modifiers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontSize="10" Foreground="Gray" Margin="8,0,0,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- F-0036: Display Instructions -->
                                <TextBlock Text="{x:Bind Instructions}" FontSize="10" Foreground="Blue" FontStyle="Italic" Margin="8,2,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Qty Controls -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" Margin="4,0">
                                <Button Content="-" Padding="2,0" Height="24" Width="24" 
                                        Command="{Binding ElementName=RootPage, Path=DataContext.DecrementQuantityCommand}" 
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"/>
                                <TextBlock Text="{x:Bind Quantity, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:0.###}'}" VerticalAlignment="Center" FontWeight="Bold"/>
                                <Button Content="+" Padding="2,0" Height="24" Width="24"
                                        Command="{Binding ElementName=RootPage, Path=DataContext.IncrementQuantityCommand}" 
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"/>
                            </StackPanel>

                            <!-- Price and Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="{x:Bind TotalAmount}" VerticalAlignment="Center"/>
                                
                                <!-- F-0036: Seat Assignment -->
                                <Button Background="Transparent" BorderThickness="0" Padding="4"
                                        Command="{Binding ElementName=RootPage, Path=DataContext.ChangeSeatCommand}"
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
                                        ToolTipService.ToolTip="Assign Seat">
                                    <StackPanel Orientation="Horizontal" Spacing="2">
                                        <TextBlock Text="S:" FontSize="10" VerticalAlignment="Center" Foreground="Gray"/>
                                        <TextBlock Text="{x:Bind SeatNumber, TargetNullValue='-'}" FontSize="12" VerticalAlignment="Center" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>

                                <!-- F-0036: Instructions -->
                                <Button Background="Transparent" BorderThickness="0" Padding="4"
                                        ToolTipService.ToolTip="Cooking Instructions"
                                        Command="{Binding ElementName=RootPage, Path=DataContext.AddCookingInstructionCommand}"
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                    <FontIcon Glyph="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                </Button>
                                <!-- F-0038: Generic Edit Modifiers Button (Handles Pizza check internally) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding ElementName=RootPage, Path=DataContext.EditModifiersCommand}"
                                            CommandParameter="{x:Bind}"
                                            ToolTipService.ToolTip="Edit Modifiers"
                                            IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                        <FontIcon Glyph="&#xE8FD;" />
                                    </Button>

                                    <!-- F-0125: Item Note -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding ElementName=RootPage, Path=DataContext.EditNoteCommand}"
                                            CommandParameter="{x:Bind}"
                                            ToolTipService.ToolTip="Edit Note"
                                            IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                        <FontIcon Glyph="&#xE90A;" />
                                    </Button>

                                <!-- Delete -->
                                <Button Background="Transparent" BorderThickness="0" Padding="4" 
                                        Command="{Binding ElementName=RootPage, Path=DataContext.RemoveItemCommand}"
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                    <FontIcon Glyph="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="Red"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Fallback when no ticket loaded -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Visibility="{Binding HasTicket, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Reverse'}">
                <TextBlock Text="{Binding Localization[OE_NoTicket], Mode=OneWay}" FontSize="18" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Localization[OE_SelectTicketPrompt], Mode=OneWay}" 
                           FontSize="14" Foreground="LightGray" HorizontalAlignment="Center" TextAlignment="Center" 
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Totals and Actions -->
            <StackPanel Grid.Row="2" Spacing="4" Margin="0,12,0,0">
                <Grid>
                    <TextBlock Text="{Binding Localization[OE_Subtotal], Mode=OneWay}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="{Binding SubTotalText}" HorizontalAlignment="Right"/>
                </Grid>
                <Grid>
                    <TextBlock Text="{Binding Localization[OE_Tax], Mode=OneWay}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="{Binding TaxText}" HorizontalAlignment="Right"/>
                </Grid>
                <Grid Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding Localization[OE_Discount], Mode=OneWay}" Foreground="Red"/>
                    <TextBlock Text="{Binding DiscountText}" Foreground="Red" HorizontalAlignment="Right"/>
                </Grid>
                <Rectangle Height="1" Fill="{ThemeResource SystemControlBackgroundBaseLowBrush}" Margin="0,4"/>
                <Grid>
                    <TextBlock Text="{Binding Localization[OE_TotalDue], Mode=OneWay}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalsText}" 
                               FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>

                    <Grid ColumnSpacing="8" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="{Binding Localization[OE_Qty], Mode=OneWay}" Command="{Binding SetQuantityCommand}" Width="60"/>
                        <Button Grid.Column="1" Content="{Binding Localization[OE_Fee], Mode=OneWay}" Command="{Binding AddFeeCommand}" Width="60"/>
                        <TextBlock Grid.Column="2" Text="{Binding PendingQuantityText}" 
                                   VerticalAlignment="Center" FontWeight="Bold" 
                                   Visibility="{Binding IsPendingQuantityVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                <!-- Row 1: Financial Actions -->
                <Grid ColumnSpacing="8" Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{Binding Localization[OE_Misc], Mode=OneWay}" Command="{Binding AddMiscItemCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="1" Content="{Binding Localization[OE_Settle], Mode=OneWay}" Command="{Binding SettleCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="2" Content="{Binding Localization[OE_PayNow], Mode=OneWay}" Command="{Binding QuickPayCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicketWithItems}" Background="Green" Foreground="White" FontWeight="Bold"/>
                </Grid>

                <!-- Row 2: Ticket Management & Output -->
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/> <!-- Increased width for Split/Merge -->
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Split / Merge -->
                    <Grid Grid.Column="0" ColumnSpacing="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="{Binding Localization[OE_Split], Mode=OneWay}" Command="{Binding SplitTicketUiCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}" FontSize="11" Padding="2"/>
                        <Button Grid.Column="1" Content="{Binding Localization[OE_Merge], Mode=OneWay}" Command="{Binding MergeTicketsCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}" FontSize="11" Padding="2"/>
                    </Grid>

                    <Button Grid.Column="1" Content="{Binding Localization[OE_Note], Mode=OneWay}" Command="{Binding EditNoteCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="2" Content="{Binding Localization[OE_Print], Mode=OneWay}" Command="{Binding PrintTicketCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="3" Content="{Binding Localization[OE_Send], Mode=OneWay}" Command="{Binding SendToKitchenCommand}" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" IsEnabled="{Binding HasUnsentItems}"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Right Column: Menu Selection -->
        <Grid Grid.Column="1" Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Breadcrumb / Header -->
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <Button Command="{Binding BackToCategoriesCommand}" Background="Transparent" BorderThickness="0" Padding="4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE72B;" FontSize="12"/>
                        <TextBlock Text="{Binding Localization[OE_Categories], Mode=OneWay}" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                
                <TextBlock Text=">" VerticalAlignment="Center" Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <TextBlock Text="{Binding SelectedCategory.Name}" 
                           VerticalAlignment="Center" FontWeight="SemiBold"
                           Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <TextBlock Text=">" VerticalAlignment="Center" Visibility="{Binding SelectedGroup, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBlock Text="{Binding SelectedGroup.Name}" 
                           VerticalAlignment="Center" FontWeight="SemiBold"
                           Visibility="{Binding SelectedGroup, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Loading Indicator -->
             <ProgressRing IsActive="{Binding IsBusy}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Grid.Row="1" Canvas.ZIndex="10"/>

            <!-- Categories Grid -->
            <GridView Grid.Row="1" 
                      ItemsSource="{Binding Categories}" 
                      Visibility="{Binding IsSelectionModeCategories, Converter={StaticResource BoolToVisibilityConverter}}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="entities:MenuCategory">
                        <Button Command="{Binding ElementName=RootPage, Path=DataContext.SelectCategoryCommand}" 
                                CommandParameter="{Binding}"
                                Width="150" Height="100" Margin="4"
                                Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White">
                            <TextBlock Text="{x:Bind Name}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontWeight="Bold"/>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Groups Grid -->
            <GridView Grid.Row="1" 
                      ItemsSource="{Binding Groups}" 
                      Visibility="{Binding IsSelectionModeGroups, Converter={StaticResource BoolToVisibilityConverter}}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="entities:MenuGroup">
                        <Button Command="{Binding ElementName=RootPage, Path=DataContext.SelectGroupCommand}" 
                                CommandParameter="{Binding}"
                                Width="150" Height="100" Margin="4"
                                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <TextBlock Text="{x:Bind Name}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Items Grid -->
             <GridView Grid.Row="1" 
                      ItemsSource="{Binding Items}" 
                      Visibility="{Binding IsSelectionModeItems, Converter={StaticResource BoolToVisibilityConverter}}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="entities:MenuItem">
                        <Button Command="{Binding ElementName=RootPage, Path=DataContext.AddItemCommand}" 
                                CommandParameter="{Binding}"
                                Width="150" Height="100" Margin="4"
                                Background="{x:Bind ColorCode, Converter={StaticResource StringColorToBrushConverter}, Mode=OneWay}" 
                                IsEnabled="{x:Bind IsAvailable, Mode=OneWay}"
                                BorderBrush="Gray" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{x:Bind Name}" TextWrapping="Wrap" TextAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind Price}" TextAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

    </Grid>
</Page>
