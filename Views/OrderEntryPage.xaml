<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.OrderEntryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:Magidesk.Application.DTOs"
    xmlns:entities="using:Magidesk.Domain.Entities"
    xmlns:converters="using:Magidesk.Presentation.Converters"
    mc:Ignorable="d"
    Name="RootPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Ticket Panel -->
        <Grid Grid.Column="0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Ticket Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Current Ticket" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock Text="{Binding Ticket.TicketNumber, Mode=OneWay}" 
                           FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                <TextBlock Text="{Binding GuestCountText, Mode=OneWay}" 
                           FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                 
                 <!-- Search Button (Triggers Dialog F-0034) -->
                 <Button Content="Search Items" HorizontalAlignment="Stretch" Command="{Binding SearchItemCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE721;"/>
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                 </Button>
            </StackPanel>

            <!-- Order Lines -->
            <ListView Grid.Row="1" ItemsSource="{Binding OrderLines}" Background="White" CornerRadius="4" Margin="0,12,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="dto:OrderLineDto">
                        <Grid Padding="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Name and Modifiers -->
                            <StackPanel>
                                <TextBlock Text="{x:Bind MenuItemName}" FontWeight="SemiBold"/>
                                 <ItemsControl ItemsSource="{x:Bind Modifiers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontSize="10" Foreground="Gray" Margin="8,0,0,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- F-0036: Display Instructions -->
                                <TextBlock Text="{x:Bind Instructions}" FontSize="10" Foreground="Blue" FontStyle="Italic" Margin="8,2,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Qty Controls -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="8,0">
                                <Button Content="-" Padding="4,0" Height="24" Width="24" 
                                        Command="{Binding ElementName=RootPage, Path=DataContext.DecrementQuantityCommand}" 
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"/>
                                <TextBlock Text="{x:Bind Quantity}" VerticalAlignment="Center" FontWeight="Bold"/>
                                <Button Content="+" Padding="4,0" Height="24" Width="24"
                                        Command="{Binding ElementName=RootPage, Path=DataContext.IncrementQuantityCommand}" 
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"/>
                            </StackPanel>

                            <!-- Price and Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind TotalAmount}" VerticalAlignment="Center"/>
                                
                                <!-- F-0036: Seat Assignment -->
                                <Button Background="Transparent" BorderThickness="0" Padding="4"
                                        Command="{Binding ElementName=RootPage, Path=DataContext.ChangeSeatCommand}"
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
                                        ToolTipService.ToolTip="Assign Seat">
                                    <StackPanel Orientation="Horizontal" Spacing="2">
                                        <TextBlock Text="S:" FontSize="10" VerticalAlignment="Center" Foreground="Gray"/>
                                        <TextBlock Text="{x:Bind SeatNumber, TargetNullValue='-'}" FontSize="12" VerticalAlignment="Center" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>

                                <!-- F-0036: Instructions -->
                                <Button Background="Transparent" BorderThickness="0" Padding="4"
                                        ToolTipService.ToolTip="Cooking Instructions"
                                        Command="{Binding ElementName=RootPage, Path=DataContext.AddCookingInstructionCommand}"
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                    <FontIcon Glyph="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                </Button>
                                <!-- F-0038: Generic Edit Modifiers Button (Handles Pizza check internally) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding ElementName=RootPage, Path=DataContext.EditModifiersCommand}"
                                            CommandParameter="{x:Bind}"
                                            ToolTipService.ToolTip="Edit Modifiers"
                                            IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                        <FontIcon Glyph="&#xE8FD;" />
                                    </Button>

                                    <!-- F-0125: Item Note -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding ElementName=RootPage, Path=DataContext.EditNoteCommand}"
                                            CommandParameter="{x:Bind}"
                                            ToolTipService.ToolTip="Edit Note"
                                            IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                        <FontIcon Glyph="&#xE90A;" />
                                    </Button>

                                <!-- Delete -->
                                <Button Background="Transparent" BorderThickness="0" Padding="4" 
                                        Command="{Binding ElementName=RootPage, Path=DataContext.RemoveItemCommand}"
                                        CommandParameter="{x:Bind}"
                                        IsEnabled="{x:Bind PrintedToKitchen, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
                                    <FontIcon Glyph="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="Red"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Fallback when no ticket loaded -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Visibility="{Binding HasTicket, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Reverse'}">
                <TextBlock Text="No ticket loaded" FontSize="18" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="Select a ticket from the switchboard or create a new ticket" 
                           FontSize="14" Foreground="LightGray" HorizontalAlignment="Center" TextAlignment="Center" 
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Totals and Actions -->
            <StackPanel Grid.Row="2" Spacing="4" Margin="0,12,0,0">
                <Grid>
                    <TextBlock Text="Subtotal" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="{Binding SubTotalText}" HorizontalAlignment="Right"/>
                </Grid>
                <Grid>
                    <TextBlock Text="Tax" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="{Binding TaxText}" HorizontalAlignment="Right"/>
                </Grid>
                <Grid Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Discount" Foreground="Red"/>
                    <TextBlock Text="{Binding DiscountText}" Foreground="Red" HorizontalAlignment="Right"/>
                </Grid>
                <Rectangle Height="1" Fill="{ThemeResource SystemControlBackgroundBaseLowBrush}" Margin="0,4"/>
                <Grid>
                    <TextBlock Text="Total Due" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalsText}" 
                               FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>

                    <Grid ColumnSpacing="8" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Qty" Command="{Binding SetQuantityCommand}" Width="60"/>
                        <Button Grid.Column="1" Content="Fee" Command="{Binding AddFeeCommand}" Width="60"/>
                        <TextBlock Grid.Column="2" Text="{Binding PendingQuantityText}" 
                                   VerticalAlignment="Center" FontWeight="Bold" 
                                   Visibility="{Binding IsPendingQuantityVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                     <!-- Placeholder actions -->
                    <Button Content="Misc" Command="{Binding AddMiscItemCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="1" Content="Settle" HorizontalAlignment="Stretch" Command="{Binding SettleCommand}" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="2" Content="Pay Now" HorizontalAlignment="Stretch" Command="{Binding QuickPayCommand}" IsEnabled="{Binding HasTicketWithItems}" Background="Green" Foreground="White"/>
                    <Grid Grid.Column="3" ColumnSpacing="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Split" Command="{Binding SplitTicketUiCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                        <Button Grid.Column="1" Content="Merge" Command="{Binding MergeTicketsCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    </Grid>
                    <Button Grid.Column="4" Content="Note" Command="{Binding EditNoteCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="5" Content="Print" Command="{Binding PrintTicketCommand}" HorizontalAlignment="Stretch" IsEnabled="{Binding HasTicket}"/>
                    <Button Grid.Column="6" Content="Send" Command="{Binding SendToKitchenCommand}" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" IsEnabled="{Binding HasUnsentItems}"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Right Column: Menu Selection -->
        <Grid Grid.Column="1" Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Breadcrumb / Header -->
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <Button Command="{Binding BackToCategoriesCommand}" Background="Transparent" BorderThickness="0" Padding="4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE72B;" FontSize="12"/>
                        <TextBlock Text="Categories" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                
                <TextBlock Text=">" VerticalAlignment="Center" Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <TextBlock Text="{Binding SelectedCategory.Name}" 
                           VerticalAlignment="Center" FontWeight="SemiBold"
                           Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <TextBlock Text=">" VerticalAlignment="Center" Visibility="{Binding SelectedGroup, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBlock Text="{Binding SelectedGroup.Name}" 
                           VerticalAlignment="Center" FontWeight="SemiBold"
                           Visibility="{Binding SelectedGroup, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Loading Indicator -->
             <ProgressRing IsActive="{Binding IsBusy}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Grid.Row="1" Canvas.ZIndex="10"/>

            <!-- Categories Grid -->
            <GridView Grid.Row="1" 
                      ItemsSource="{Binding Categories}" 
                      Visibility="{Binding IsSelectionModeCategories, Converter={StaticResource BoolToVisibilityConverter}}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="entities:MenuCategory">
                        <Button Command="{Binding ElementName=RootPage, Path=DataContext.SelectCategoryCommand}" 
                                CommandParameter="{Binding}"
                                Width="150" Height="100" Margin="4"
                                Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White">
                            <TextBlock Text="{x:Bind Name}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" FontWeight="Bold"/>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Groups Grid -->
            <GridView Grid.Row="1" 
                      ItemsSource="{Binding Groups}" 
                      Visibility="{Binding IsSelectionModeGroups, Converter={StaticResource BoolToVisibilityConverter}}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="entities:MenuGroup">
                        <Button Command="{Binding ElementName=RootPage, Path=DataContext.SelectGroupCommand}" 
                                CommandParameter="{Binding}"
                                Width="150" Height="100" Margin="4"
                                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <TextBlock Text="{x:Bind Name}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Items Grid -->
             <GridView Grid.Row="1" 
                      ItemsSource="{Binding Items}" 
                      Visibility="{Binding IsSelectionModeItems, Converter={StaticResource BoolToVisibilityConverter}}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="entities:MenuItem">
                        <Button Command="{Binding ElementName=RootPage, Path=DataContext.AddItemCommand}" 
                                CommandParameter="{Binding}"
                                Width="150" Height="100" Margin="4"
                                Background="{x:Bind ColorCode, Converter={StaticResource StringColorToBrushConverter}, Mode=OneWay}" 
                                IsEnabled="{x:Bind IsAvailable, Mode=OneWay}"
                                BorderBrush="Gray" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{x:Bind Name}" TextWrapping="Wrap" TextAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind Price}" TextAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

    </Grid>
</Page>
