<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.DatabaseSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="40,40,40,20">
            <TextBlock 
                Text="Database Setup" 
                Style="{StaticResource TitleTextBlockStyle}"
                Margin="0,0,0,8"/>
            <TextBlock 
                Text="Configure your PostgreSQL database connection to get started."
                Style="{StaticResource SubtitleTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="40,0,40,40">
            <StackPanel MaxWidth="600" Spacing="24">

                <!-- Connection Settings Card -->
                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock 
                            Text="Connection Settings" 
                            Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <!-- Host -->
                        <TextBox 
                            Header="Database Host"
                            PlaceholderText="localhost"
                            Text="{x:Bind ViewModel.Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Port -->
                        <NumberBox 
                            Header="Port"
                            PlaceholderText="5432"
                            Value="{x:Bind ViewModel.Port, Mode=TwoWay}"
                            Minimum="1"
                            Maximum="65535"
                            SpinButtonPlacementMode="Inline"
                            IsEnabled="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Database Name -->
                        <TextBox 
                            Header="Database Name"
                            PlaceholderText="magidesk"
                            Text="{x:Bind ViewModel.DatabaseName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Username -->
                        <TextBox 
                            Header="Username"
                            PlaceholderText="postgres"
                            Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Password -->
                        <PasswordBox 
                            Header="Password"
                            PlaceholderText="Enter database password"
                            Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                            IsEnabled="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Test Connection Button -->
                        <Button 
                            Command="{x:Bind ViewModel.TestConnectionCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <ProgressRing 
                                        Width="16" 
                                        Height="16"
                                        IsActive="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay}"
                                        Visibility="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay}"/>
                                    <TextBlock Text="Test Connection"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <InfoBar
                    IsOpen="True"
                    Severity="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToSeverityConverter}}"
                    Title="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    IsClosable="False"/>

                <!-- Seeding Progress Card -->
                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24"
                    Visibility="{x:Bind ViewModel.ConnectionTestPassed, Mode=OneWay}">
                    <StackPanel Spacing="16">
                        <TextBlock 
                            Text="Database Setup" 
                            Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <!-- Save Configuration Button -->
                        <Button 
                            Content="Save Configuration"
                            Command="{x:Bind ViewModel.SaveConfigurationCommand}"
                            HorizontalAlignment="Stretch"
                            Visibility="{x:Bind ViewModel.SeedingCompleted, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- Run Setup Button -->
                        <Button 
                            Command="{x:Bind ViewModel.RunDatabaseSetupCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Visibility="{x:Bind ViewModel.SeedingCompleted, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <ProgressRing 
                                        Width="16" 
                                        Height="16"
                                        IsActive="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay}"
                                        Visibility="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay}"/>
                                    <TextBlock Text="Run Database Setup"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Seeding Progress -->
                        <StackPanel 
                            Spacing="8"
                            Visibility="{x:Bind ViewModel.IsSeedingDatabase, Mode=OneWay}">
                            <TextBlock 
                                Text="{x:Bind ViewModel.SeedingProgressMessage, Mode=OneWay}"
                                Style="{StaticResource BodyTextBlockStyle}"/>
                            <ProgressBar 
                                Value="{x:Bind ViewModel.SeedingProgressPercent, Mode=OneWay}"
                                Maximum="100"
                                ShowError="False"
                                ShowPaused="False"/>
                        </StackPanel>

                        <!-- Continue Button -->
                        <Button 
                            Content="Continue to Application"
                            Command="{x:Bind ViewModel.ContinueToAppCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Visibility="{x:Bind ViewModel.SeedingCompleted, Mode=OneWay}"/>
                    </StackPanel>
                </Border>

                <!-- Help Text -->
                <TextBlock 
                    Text="Note: Your database credentials will be encrypted and stored securely on this machine using Windows Data Protection."
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    TextWrapping="Wrap"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
