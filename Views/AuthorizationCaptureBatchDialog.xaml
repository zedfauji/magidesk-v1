<ContentDialog
    x:Class="Magidesk.Views.AuthorizationCaptureBatchDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d"
    Title="{Binding Title}"
    PrimaryButtonText="Finish"
    IsPrimaryButtonEnabled="{Binding IsFinished}"
    Closing="ContentDialog_Closing">

    <Grid RowSpacing="16" Width="500" MinHeight="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding StatusMessage}" 
                   Style="{StaticResource SubtitleTextBlockStyle}"/>

        <!-- Progress -->
        <ProgressBar Grid.Row="1" 
                     Value="{Binding ProgressValue}" 
                     Maximum="100" 
                     IsIndeterminate="{Binding IsIndeterminate}"
                     HorizontalAlignment="Stretch"/>

        <!-- Log Output -->
        <Border Grid.Row="2" 
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="8">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding LogEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Start Button (Only visible if not processing and not finished) -->
        <!-- Note: We use a simple trigger or visibility binding here. 
             Since we don't have a value converter handy for (Not Processing AND Not Finished), 
             we'll rely on the VM to start automatically or user to check log. 
             Ideally there should be a 'Start' button if it doesn't auto-start. 
             Let's add a button but only enable it if !IsProcessing && !IsFinished.
        -->
        <Button Grid.Row="3" 
                Content="Start Capture" 
                Command="{Binding StartBatchCommand}"
                HorizontalAlignment="Right"/>
    </Grid>
</ContentDialog>
