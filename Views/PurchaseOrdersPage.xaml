<Page
    x:Class="Magidesk.Presentation.Views.PurchaseOrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:Magidesk.Domain.Entities"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{x:Bind ViewModel.Title}" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- List of POs -->
            <Grid Grid.Column="0" Margin="0,0,24,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ComboBox Header="Vendor" ItemsSource="{x:Bind ViewModel.AvailableVendors}" 
                          SelectedItem="{x:Bind ViewModel.SelectedVendor, Mode=TwoWay}"
                          DisplayMemberPath="Name" HorizontalAlignment="Stretch" Margin="0,0,0,12"/>
                
                <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.PurchaseOrders, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedPO, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="entities:PurchaseOrder">
                            <Grid Padding="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding PONumber}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Vendor.Name}" Opacity="0.6" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding Status}" VerticalAlignment="Center" Opacity="0.8"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Grid.Row="2" Content="New PO" Command="{x:Bind ViewModel.CreatePOCommand}" 
                        HorizontalAlignment="Stretch" Margin="0,12,0,0" Style="{StaticResource AccentButtonStyle}"/>
            </Grid>

            <!-- PO Details -->
            <Grid Grid.Column="1" Padding="24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8"
                  Visibility="{x:Bind ViewModel.SelectedPO, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="{x:Bind ViewModel.SelectedPO.PONumber, Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.SelectedPO.Status, Mode=OneWay, ConverterParameter='Status: {0}', Converter={StaticResource StringFormatConverter}}" Opacity="0.6"/>
                </StackPanel>

                <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.SelectedPO.Lines, Mode=OneWay}">
                    <ListView.Header>
                        <Grid Padding="12,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Item" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Qty" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="Cost" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="entities:PurchaseOrderLine">
                            <Grid Padding="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding InventoryItem.Name}"/>
                                <TextBlock Grid.Column="1" Text="{Binding QuantityExpected}" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="2" Text="{Binding UnitCost, ConverterParameter='C2', Converter={StaticResource CurrencyConverter}}" HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12" Margin="0,24,0,0">
                    <Button Content="Order" Command="{x:Bind ViewModel.OrderPOCommand}" IsEnabled="{x:Bind ViewModel.CanOrder, Mode=OneWay}"/>
                    <Button Content="Receive" Command="{x:Bind ViewModel.ReceivePOCommand}" IsEnabled="{x:Bind ViewModel.CanReceive, Mode=OneWay}" Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
