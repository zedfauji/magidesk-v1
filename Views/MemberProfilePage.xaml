<Page
    x:Class="Magidesk.Presentation.Views.MemberProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Magidesk.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <PersonPicture Grid.Column="0" 
                           DisplayName="{x:Bind ViewModel.FullName, Mode=OneWay}" 
                           Width="80" Height="80" 
                           VerticalAlignment="Top"/>

            <StackPanel Grid.Column="1" Margin="24,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.FullName, Mode=OneWay}" 
                           Style="{StaticResource TitleLargeTextBlockStyle}" />
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="{x:Bind ViewModel.MemberNumber, Mode=OneWay}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Opacity="0.7"/>
                    <Border Background="{ThemeResource SystemAccentColor}" 
                            CornerRadius="4" 
                            Padding="8,2" 
                            Margin="12,0,0,0">
                        <TextBlock Text="{x:Bind ViewModel.TierName, Mode=OneWay}" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>
                    <Border Background="{x:Bind ViewModel.IsActive, Mode=OneWay, Converter={StaticResource ActiveStatusBrushConverter}}" 
                            CornerRadius="4" 
                            Padding="8,2" 
                            Margin="8,0,0,0">
                        <TextBlock Text="{x:Bind ViewModel.StatusDisplay, Mode=OneWay}" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <Button Content="Check In" 
                        Command="{x:Bind ViewModel.CheckInCommand}" 
                        Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Add Credit" 
                        Command="{x:Bind ViewModel.AddCreditCommand}" />
                <Button Content="Renew" 
                        Command="{x:Bind ViewModel.RenewCommand}" />
                <Button Content="Edit" 
                        Command="{x:Bind ViewModel.EditCommand}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Edit"/>
                                <TextBlock Text="Edit"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Tabs -->
        <Pivot Grid.Row="1">
            <PivotItem Header="Overview">
                <Grid Padding="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Spacing="16">
                        <TextBlock Text="Member Information" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Member ID:"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.MemberNumber, Mode=OneWay}" FontWeight="SemiBold"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Prepaid Balance:"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.PrepaidBalance, Mode=OneWay}" FontWeight="SemiBold" Foreground="{ThemeResource SystemAccentColor}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="History">
                <TextBlock Text="Visit history will be displayed here." Margin="12"/>
            </PivotItem>
            <PivotItem Header="Balance">
                <TextBlock Text="Transaction history will be displayed here." Margin="12"/>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
