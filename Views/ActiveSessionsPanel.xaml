<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Magidesk.Presentation.Views.ActiveSessionsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:Magidesk.Application.DTOs"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Active Sessions" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{x:Bind ViewModel.ActiveSessions.Count, Mode=OneWay}" 
                      FontSize="16" 
                      Foreground="{ThemeResource SystemAccentColor}" 
                      VerticalAlignment="Center"/>
            <Button Content="Refresh" 
                   Command="{x:Bind ViewModel.RefreshCommand}" 
                   Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Error Display -->
        <InfoBar Grid.Row="1"
            IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
            Severity="Error"
            Title="Error"
            Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
            IsClosable="True"
            Margin="0,0,0,8"/>

        <!-- Sessions List -->
        <ListView Grid.Row="2" 
                 ItemsSource="{x:Bind ViewModel.ActiveSessions, Mode=OneWay}"
                 SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="dto:ActiveSessionDto">
                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                           BorderThickness="1" 
                           CornerRadius="4" 
                           Padding="12" 
                           Margin="0,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Session Info -->
                            <StackPanel Grid.Column="0" Spacing="4">
                                <!-- Table Name -->
                                <TextBlock Text="{x:Bind TableName}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"/>

                                <!-- Elapsed Time -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Time:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ElapsedTimeDisplay, Mode=OneWay}" 
                                              FontWeight="SemiBold" 
                                              Foreground="Green"/>
                                </StackPanel>

                                <!-- Running Charge -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Charge:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind RunningChargeDisplay, Mode=OneWay}" 
                                              FontWeight="SemiBold" 
                                              Foreground="{ThemeResource SystemAccentColor}"/>
                                </StackPanel>

                                <!-- Customer (if available) -->
                                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind CustomerName, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="Customer:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind CustomerName}" FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- Paused Indicator -->
                                <Border Background="Orange" 
                                       CornerRadius="2" 
                                       Padding="4,2" 
                                       HorizontalAlignment="Left"
                                       Visibility="{x:Bind IsPaused}">
                                    <TextBlock Text="PAUSED" 
                                              FontSize="10" 
                                              FontWeight="Bold" 
                                              Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                                <Button Content="End Session" 
                                       Command="{Binding DataContext.EndSessionCommand, ElementName=RootControl}" 
                                       CommandParameter="{x:Bind SessionId}"
                                       Style="{StaticResource AccentButtonStyle}"/>
                                
                                <Button Content="Pause" 
                                       IsEnabled="False">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="Pause feature not yet implemented"/>
                                    </ToolTipService.ToolTip>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <!-- Empty State -->
            <ListView.Footer>
                <TextBlock Text="No active sessions" 
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,32"
                          Visibility="{x:Bind ViewModel.ActiveSessions.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibleConverter}}"/>
            </ListView.Footer>
        </ListView>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="2" 
                     IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                     Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
    </Grid>
</UserControl>
