<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="12" Padding="16" MaxWidth="900">
            <TextBlock Text="Settings" FontSize="24" />

            <TextBlock Text="General" FontSize="18" />
            <ToggleSwitch Header="Kiosk mode" IsOn="{Binding IsKioskMode, Mode=TwoWay}" />

            <TextBlock Text="Connectivity" FontSize="18" />
            <TextBox Header="API Base URL" Text="{Binding ApiBaseUrl, Mode=TwoWay}" />

            <TextBlock Text="Placeholders" FontSize="18" />
            <TextBlock Opacity="0.7" Text="- User roles / permissions (coming soon)" />
            <TextBlock Opacity="0.7" Text="- Printer setup (coming soon)" />
            <TextBlock Opacity="0.7" Text="- Tax/discount configuration (coming soon)" />
        </StackPanel>
    </ScrollViewer>
</Page>
