<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="12" Padding="16" MaxWidth="900">
            <TextBlock Text="Settings" FontSize="24" />

            <TextBlock Text="Restaurant Information" FontSize="18" FontWeight="SemiBold" Margin="0,12,0,0"/>
            <TextBox Header="Restaurant Name" Text="{Binding RestaurantName, Mode=TwoWay}" />
            <TextBox Header="Address" Text="{Binding RestaurantAddress, Mode=TwoWay}" />
            <TextBox Header="Phone" Text="{Binding RestaurantPhone, Mode=TwoWay}" InputScope="TelephoneNumber" />
            <TextBox Header="Email" Text="{Binding RestaurantEmail, Mode=TwoWay}" InputScope="EmailSmtpAddress" />
            <TextBox Header="Website" Text="{Binding RestaurantWebsite, Mode=TwoWay}" InputScope="Url" />
            <TextBox Header="Tax ID / VAT" Text="{Binding TaxId, Mode=TwoWay}" />
            <TextBox Header="Receipt Footer Message" Text="{Binding ReceiptFooter, Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" />
            
            <Button Content="Save Changes" Command="{Binding SaveSettingsCommand}" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right" />

            <MenuFlyoutSeparator />

            <TextBlock Text="Terminal Settings" FontSize="18" FontWeight="SemiBold" />
            <ToggleSwitch Header="Kiosk Mode" IsOn="{Binding IsKioskMode, Mode=TwoWay}" />
            <!-- ApiBaseUrl removed as it was a placeholder -->
        </StackPanel>
    </ScrollViewer>
</Page>
