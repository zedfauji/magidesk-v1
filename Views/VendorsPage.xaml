<Page
    x:Class="Magidesk.Presentation.Views.VendorsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:Magidesk.Domain.Entities"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{x:Bind ViewModel.Title}" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- List -->
            <Grid Grid.Column="0" Margin="0,0,24,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView ItemsSource="{x:Bind ViewModel.Vendors, Mode=OneWay}" 
                          SelectedItem="{x:Bind ViewModel.SelectedVendor, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="entities:Vendor">
                            <StackPanel Padding="0,8">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ContactPerson}" Opacity="0.6" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Grid.Row="1" Content="Add Vendor" Command="{x:Bind ViewModel.AddVendorCommand}" HorizontalAlignment="Stretch" Margin="0,12,0,0"/>
            </Grid>

            <!-- Details -->
            <ScrollViewer Grid.Column="1" Padding="24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8"
                          Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="16">
                    <TextBox Header="Vendor Name" Text="{x:Bind ViewModel.EditingName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Header="Contact Person" Text="{x:Bind ViewModel.EditingContact, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Header="Email" Text="{x:Bind ViewModel.EditingEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Header="Phone" Text="{x:Bind ViewModel.EditingPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Header="Address" Text="{x:Bind ViewModel.EditingAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="100"/>

                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,24,0,0">
                        <Button Content="Save" Command="{x:Bind ViewModel.SaveVendorCommand}" Style="{StaticResource AccentButtonStyle}"/>
                        <Button Content="Delete" Command="{x:Bind ViewModel.DeleteVendorCommand}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
