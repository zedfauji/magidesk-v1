<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Magidesk.Presentation.Views.TicketManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="8">
            <TextBlock Text="Ticket Management" FontSize="24" />
            <InfoBar IsOpen="{Binding HasError}" IsClosable="True" Severity="Error" Message="{Binding Error}" />
            <TextBlock Text="{Binding LastResult}" />
            <Button Content="Refresh Open Tickets" Command="{Binding RefreshCommand}" Width="200" />
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TabView Grid.Column="0" SelectedIndex="0">
                <TabView.TabItems>
                    <TabViewItem Header="Completed Tickets">
                        <Grid>
                            <ListView ItemsSource="{Binding CompletedTickets}" 
                                      SelectedItem="{Binding SelectedTicket, Mode=TwoWay}"
                                      Visibility="{Binding HasCompletedTickets, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TicketNumber}" />
                                            <TextBlock Opacity="0.7" Text="{Binding Status}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <StackPanel VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"
                                        Spacing="8"
                                        Visibility="{Binding HasNoCompletedTickets, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="No completed tickets yet." 
                                           FontSize="16" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Close a ticket to make it available for refund or reprint." 
                                           FontSize="14" 
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                           TextWrapping="Wrap"
                                           MaxWidth="300"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </TabViewItem>
                    <TabViewItem Header="Active Tickets">
                        <Grid>
                            <ListView ItemsSource="{Binding ActiveTickets}" 
                                      SelectedItem="{Binding SelectedTicket, Mode=TwoWay}"
                                      Visibility="{Binding HasActiveTickets, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TicketNumber}" />
                                            <TextBlock Opacity="0.7" Text="{Binding Status}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <StackPanel VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"
                                        Spacing="8"
                                        Visibility="{Binding HasNoActiveTickets, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="No active tickets." 
                                           FontSize="16" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </TabViewItem>
                </TabView.TabItems>
            </TabView>

            <ScrollViewer Grid.Column="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="Selected" FontSize="18" />
                    <TextBlock Text="{Binding SelectedSummaryText}" />

                    <TextBlock Text="Actions" FontSize="18" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Void Ticket" 
                                Command="{Binding VoidSelectedCommand}" 
                                Visibility="{Binding CanVoidTicket, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <Button Content="Refund Ticket" 
                                Command="{Binding RefundSelectedCommand}" 
                                Visibility="{Binding CanRefundTicket, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <Button Content="Reprint Receipt" 
                                Command="{Binding ReprintReceiptCommand}" 
                                Visibility="{Binding CanReprintTicket, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>


                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
