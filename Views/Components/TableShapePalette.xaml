<UserControl
    x:Class="Magidesk.Presentation.Views.Components.TableShapePalette"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels"
    xmlns:dto="using:Magidesk.Application.DTOs"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="200">

    <UserControl.Resources>
        <Style x:Key="ShapeButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <!-- Shape Preview -->
                                <Border Width="24" Height="24"
                                        Background="{ThemeResource SystemAccentColorLight1}"
                                        CornerRadius="{Binding Tag, Converter={StaticResource ShapeToCornerRadiusConverter}}"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                          VerticalAlignment="Center"
                                          Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Spacing="8">
        <TextBlock Text="Table Shapes" 
                  Style="{StaticResource SubtitleTextBlockStyle}"
                  Margin="0,0,0,8"/>
        
        <StackPanel Spacing="4">
            <RadioButton Content="Rectangle" 
                        GroupName="TableShapes"
                        IsChecked="{x:Bind ViewModel.SelectedShape, Mode=OneWay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Rectangle}"
                        Checked="ShapeRadioButton_Checked"
                        Tag="Rectangle"
                        Style="{StaticResource ShapeButtonStyle}"
                        IsEnabled="{x:Bind ViewModel.IsDesignMode}"/>
            
            <RadioButton Content="Square" 
                        GroupName="TableShapes"
                        IsChecked="{x:Bind ViewModel.SelectedShape, Mode=OneWay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Square}"
                        Checked="ShapeRadioButton_Checked"
                        Tag="Square"
                        Style="{StaticResource ShapeButtonStyle}"
                        IsEnabled="{x:Bind ViewModel.IsDesignMode}"/>
            
            <RadioButton Content="Round" 
                        GroupName="TableShapes"
                        IsChecked="{x:Bind ViewModel.SelectedShape, Mode=OneWay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Round}"
                        Checked="ShapeRadioButton_Checked"
                        Tag="Round"
                        Style="{StaticResource ShapeButtonStyle}"
                        IsEnabled="{x:Bind ViewModel.IsDesignMode}"/>
            
            <RadioButton Content="Oval" 
                        GroupName="TableShapes"
                        IsChecked="{x:Bind ViewModel.SelectedShape, Mode=OneWay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Oval}"
                        Checked="ShapeRadioButton_Checked"
                        Tag="Oval"
                        Style="{StaticResource ShapeButtonStyle}"
                        IsEnabled="{x:Bind ViewModel.IsDesignMode}"/>
        </StackPanel>

        <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,8,0,0"
                Margin="0,8,0,0">
            <StackPanel Spacing="4">
                <TextBlock Text="Shape Properties" 
                          Style="{StaticResource CaptionTextBlockStyle}"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="Width:" 
                              Style="{StaticResource CaptionTextBlockStyle}"
                              VerticalAlignment="Center"/>
                    <NumberBox Grid.Column="1" 
                               Value="100" 
                               Minimum="50" 
                               Maximum="200"
                               SmallChange="10"
                               Width="80"
                               IsEnabled="{x:Bind ViewModel.IsDesignMode}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="Height:" 
                              Style="{StaticResource CaptionTextBlockStyle}"
                              VerticalAlignment="Center"/>
                    <NumberBox Grid.Column="1" 
                               Value="100" 
                               Minimum="50" 
                               Maximum="200"
                               SmallChange="10"
                               Width="80"
                               IsEnabled="{x:Bind ViewModel.IsDesignMode}"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
