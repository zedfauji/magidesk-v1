<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Magidesk.Presentation.Views.Components.CustomerSearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d">

    <StackPanel Spacing="8">
        <AutoSuggestBox x:Name="SearchBox"
                        PlaceholderText="Search customer by name, phone or email..."
                        Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}"
                        ItemsSource="{x:Bind ViewModel.SearchResults, Mode=OneWay}"
                        QueryIcon="Find"
                        SuggestionChosen="OnSuggestionChosen">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate x:DataType="vm:CustomerSearchResultViewModel">
                    <Grid Padding="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{x:Bind FullName}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind Phone}" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                        <Border Grid.Column="1" 
                                Background="{x:Bind TierColor}" 
                                CornerRadius="4" 
                                Padding="8,2" 
                                Visibility="{x:Bind IsMember, Converter={StaticResource BoolToVisibilityConverter}}"
                                VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind TierName}" FontSize="10" Foreground="White"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>

        <!-- Selected Customer Display -->
        <Border Visibility="{x:Bind ViewModel.HasSelectedCustomer, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomerName, Mode=OneWay}" FontWeight="Bold"/>
                    <TextBlock Text="{x:Bind ViewModel.SelectedCustomerPhone, Mode=OneWay}" Opacity="0.7"/>
                </StackPanel>
                <Button Grid.Column="1" 
                        Content="Clear" 
                        Command="{x:Bind ViewModel.ClearSelectionCommand}" 
                        VerticalAlignment="Center"
                        Style="{StaticResource IconButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <SymbolIcon Symbol="Clear"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
