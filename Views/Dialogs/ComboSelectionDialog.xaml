<ContentDialog
    x:Class="Magidesk.Views.Dialogs.ComboSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.ViewModels.Dialogs"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.TitleText, Mode=OneWay}"
    PrimaryButtonText="Done"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    MinWidth="600" MinHeight="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Combo Info -->
        <TextBlock Grid.Row="0" 
                   Text="{x:Bind ViewModel.ComboName, Mode=OneWay}" 
                   Style="{StaticResource SubtitleTextBlockStyle}" 
                   Margin="0,0,0,16"
                   TextWrapping="Wrap"/>

        <!-- Selection Groups -->
        <Pivot Grid.Row="1" ItemsSource="{x:Bind ViewModel.SelectionGroups, Mode=OneWay}">
            <Pivot.HeaderTemplate>
                <DataTemplate x:DataType="viewmodels:ComboGroupViewModel">
                    <TextBlock Text="{x:Bind GroupName}" FontSize="16"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <Pivot.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ComboGroupViewModel">
                    <Grid Padding="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Group Instructions -->
                        <TextBlock Grid.Row="0" 
                                   Text="{x:Bind SelectionPrompt}" 
                                   FontStyle="Italic" 
                                   Foreground="Gray"
                                   Margin="0,0,0,12"/>

                        <!-- Items Grid -->
                        <GridView Grid.Row="1" 
                                  ItemsSource="{x:Bind Items, Mode=OneWay}"
                                  SelectionMode="None"
                                  IsItemClickEnabled="False">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:ComboItemViewModel">
                                    <RadioButton IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                 GroupName="{x:Bind GroupId}"
                                                 Margin="4" 
                                                 MinWidth="140" 
                                                 MinHeight="80"
                                                 Padding="8">
                                        <StackPanel>
                                            <TextBlock Text="{x:Bind ItemName}" 
                                                       TextWrapping="Wrap" 
                                                       HorizontalAlignment="Center"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind PriceDisplay, Mode=OneWay}" 
                                                       HorizontalAlignment="Center"
                                                       Margin="0,4,0,0"
                                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        </StackPanel>
                                    </RadioButton>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </DataTemplate>
            </Pivot.ItemTemplate>
        </Pivot>

        <!-- Validation Error Message -->
        <TextBlock Grid.Row="2" 
                   Text="{x:Bind ViewModel.ValidationError, Mode=OneWay}" 
                   Foreground="Red" FontWeight="Bold" Margin="0,12,0,0"
                   Visibility="{x:Bind ViewModel.HasValidationError, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</ContentDialog>
