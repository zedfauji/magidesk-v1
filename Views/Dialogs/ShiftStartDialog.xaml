<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Magidesk.Presentation.Views.Dialogs.ShiftStartDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Magidesk.Presentation.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.Presentation.ViewModels"
    mc:Ignorable="d"
    Title="Start Shift"
    PrimaryButtonText="Start Shift"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonCommand="{Binding ConfirmCommand}"
    SecondaryButtonCommand="{Binding CancelCommand}"
    Style="{StaticResource DefaultContentDialogStyle}">

    <Grid RowSpacing="12" MinWidth="350">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <InfoBar Severity="Informational" 
                 IsOpen="True" 
                 IsClosable="False" 
                 Message="A new shift must be started to perform transactions." />

        <ComboBox Grid.Row="1" 
                  Header="Select Shift" 
                  ItemsSource="{Binding AvailableShifts}" 
                  SelectedItem="{Binding SelectedShift}"
                  DisplayMemberPath="Name"
                  HorizontalAlignment="Stretch"
                  PlaceholderText="Choose a shift period..."/>

        <NumberBox Grid.Row="2"
                   Header="Opening Balance"
                   Value="{Binding OpeningBalance, Mode=TwoWay}"
                   SpinButtonPlacementMode="Inline"
                   SmallChange="10.00"
                   PlaceholderText="0.00"/>
        
        <ProgressBar Grid.Row="2" 
                     IsIndeterminate="True" 
                     Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" 
                     VerticalAlignment="Bottom"/>
    </Grid>
</ContentDialog>
