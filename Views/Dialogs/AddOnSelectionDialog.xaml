<ContentDialog
    x:Class="Magidesk.Views.Dialogs.AddOnSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Magidesk.ViewModels.Dialogs"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.PromptText, Mode=OneWay}"
    PrimaryButtonText="Done"
    SecondaryButtonText="Skip"
    DefaultButton="Primary"
    MinWidth="500" MinHeight="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Prompt -->
        <TextBlock Grid.Row="0" 
                   Text="{x:Bind ViewModel.PromptText, Mode=OneWay}" 
                   Style="{StaticResource SubtitleTextBlockStyle}" 
                   Margin="0,0,0,16"
                   TextWrapping="Wrap"/>

        <!-- Add-on Items Grid -->
        <GridView Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.AddOnItems, Mode=OneWay}"
                  SelectionMode="None"
                  IsItemClickEnabled="False">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:AddOnItemViewModel">
                    <ToggleButton IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                  Margin="4" 
                                  MinWidth="120" 
                                  MinHeight="80"
                                  Padding="8">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Name}" 
                                       TextWrapping="Wrap" 
                                       HorizontalAlignment="Center"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </ToggleButton>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</ContentDialog>
