<ContentDialog
    x:Class="Magidesk.Views.Dialogs.ItemSearchDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:Magidesk.Domain.Entities"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.Title, Mode=OneWay}"
    PrimaryButtonText="Cancel"
    DefaultButton="None">

    <Grid RowDefinitions="Auto, *">
        <TextBox x:Name="SearchBox" 
                 Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 PlaceholderText="Search by Name or Barcode..." 
                 HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
        
        <ListView Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.Results, Mode=OneWay}" 
                  SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                  Height="300" Width="400">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="domain:MenuItem">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind Barcode}" FontSize="12" Opacity="0.6" Visibility="{x:Bind Barcode, Converter={StaticResource StringVisibilityConverter}, ConverterParameter=NotEmpty}"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="{Binding Price}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressRing Grid.RowSpan="2" IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="40" Height="40"/>
    </Grid>
</ContentDialog>
