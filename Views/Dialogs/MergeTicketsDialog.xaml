<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Magidesk.Views.Dialogs.MergeTicketsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:Magidesk.Application.DTOs"
    mc:Ignorable="d"
    Title="Merge Ticket"
    PrimaryButtonText="Merge"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonCommand="{Binding ConfirmCommand}"
    SecondaryButtonCommand="{Binding CancelCommand}">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select target ticket to merge into:" Style="{StaticResource BodyTextBlockStyle}"/>

        <ListView Grid.Row="1" ItemsSource="{Binding AvailableTickets, Mode=OneWay}" 
                  SelectedItem="{Binding SelectedTargetTicket, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="dto:TicketDto">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{x:Bind TicketNumber}" FontWeight="Bold" Width="60"/>
                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="{x:Bind TableName}" Foreground="Gray"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="{x:Bind TotalAmount, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:C}'}" HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressRing Grid.Row="1" IsActive="{Binding IsBusy}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</ContentDialog>
