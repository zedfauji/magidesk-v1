<ContentDialog
    x:Class="Magidesk.Views.Dialogs.CustomerSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels.Dialogs"
    mc:Ignorable="d"
    Title="Assign Customer"
    PrimaryButtonText="Confirm"
    SecondaryButtonText="Cancel"
    PrimaryButtonCommand="{x:Bind ViewModel.ConfirmCommand}"
    SecondaryButtonCommand="{x:Bind ViewModel.CancelCommand}"
    RequestedTheme="Dark">

    <StackPanel Spacing="12" Width="300">
        <TextBox Header="Guest Name" Text="{x:Bind ViewModel.GuestName, Mode=TwoWay}" PlaceholderText="Enter Name" />
        <TextBox Header="Phone Number" Text="{x:Bind ViewModel.PhoneNumber, Mode=TwoWay}" PlaceholderText="(Optional)" InputScope="TelephoneNumber"/>
    </StackPanel>
</ContentDialog>
