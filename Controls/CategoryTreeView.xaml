<UserControl
    x:Class="Magidesk.Presentation.Controls.CategoryTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:queries="using:Magidesk.Application.Queries"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="8" Spacing="8">
            <Button Content="Refresh" Command="{x:Bind ViewModel.LoadCategoriesCommand}" />
            <TextBlock Text="Category Hierarchy" 
                       VerticalAlignment="Center" 
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="1" 
                      IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Width="50" Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>

        <!-- Tree View -->
        <ScrollViewer Grid.Row="1" 
                      Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource InvertedBoolToVisibilityConverter}, Mode=OneWay}">
            <TreeView x:Name="CategoryTree"
                      ItemsSource="{x:Bind ViewModel.RootCategories, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                      CanDragItems="True"
                      CanReorderItems="True"
                      AllowDrop="True"
                      DragItemsCompleted="TreeView_DragItemsCompleted">
                
                <TreeView.ItemTemplate>
                    <DataTemplate x:DataType="queries:CategoryNodeDto">
                        <TreeViewItem ItemsSource="{x:Bind Children, Mode=OneWay}"
                                      Content="{x:Bind}"
                                      IsExpanded="True"
                                      AllowDrop="True">
                            <TreeViewItem.ContentTemplate>
                                <DataTemplate x:DataType="queries:CategoryNodeDto">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Category Icon -->
                                        <FontIcon Grid.Column="0" 
                                                  Glyph="&#xE8F1;" 
                                                  FontSize="16"
                                                  Margin="0,0,8,0"
                                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

                                        <!-- Category Name -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{x:Bind Name}"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"/>

                                        <!-- Context Menu Flyout -->
                                        <Button Grid.Column="2" 
                                                Content="&#xE712;" 
                                                FontFamily="Segoe MDL2 Assets"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,4">
                                            <Button.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Add Subcategory" 
                                                                    Icon="Add"
                                                                    Command="{Binding ElementName=CategoryTree, Path=DataContext.AddSubcategoryCommand}"
                                                                    CommandParameter="{x:Bind Id}"/>
                                                    <MenuFlyoutItem Text="Edit" 
                                                                    Icon="Edit"/>
                                                    <MenuFlyoutSeparator/>
                                                    <MenuFlyoutItem Text="Delete" 
                                                                    Icon="Delete"
                                                                    Foreground="Red"
                                                                    Command="{Binding ElementName=CategoryTree, Path=DataContext.DeleteCategoryCommand}"
                                                                    CommandParameter="{x:Bind Id}"/>
                                                </MenuFlyout>
                                            </Button.Flyout>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </TreeViewItem.ContentTemplate>
                        </TreeViewItem>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16"
                    Visibility="{x:Bind ViewModel.RootCategories.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted, Mode=OneWay}">
            <FontIcon Glyph="&#xE8F1;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="No categories found" 
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Button Content="Create First Category" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
