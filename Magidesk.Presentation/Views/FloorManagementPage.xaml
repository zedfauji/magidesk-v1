<Page
    x:Class="Magidesk.Presentation.Views.FloorManagementPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Magidesk.Presentation.ViewModels"
    xmlns:dto="using:Magidesk.Application.DTOs"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <CommandBar Grid.Row="0" DefaultLabelPosition="Right" Background="Transparent">
            <AppBarButton Icon="Back" Label="Back" Command="{x:Bind ViewModel.GoBackCommand}"/>
            <AppBarButton Icon="Add" Label="New Floor" Command="{x:Bind ViewModel.CreateFloorCommand}"/>
            <AppBarButton Icon="Save" Label="Update" Command="{x:Bind ViewModel.UpdateFloorCommand}" 
                        IsEnabled="{x:Bind ViewModel.IsEditMode}"/>
            <AppBarButton Icon="Delete" Label="Delete" Command="{x:Bind ViewModel.DeleteFloorCommand}" CommandParameter="{x:Bind ViewModel.SelectedFloor}"/>
            <AppBarButton Icon="Design" Label="Table Designer" Command="{x:Bind ViewModel.NavigateToDesignerCommand}"/>
        </CommandBar>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Floor List -->
            <ScrollViewer Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Padding="16" Spacing="8">
                    <TextBlock Text="Floors" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <ListView ItemsSource="{x:Bind ViewModel.Floors, Mode=OneWay}"
                             SelectedItem="{x:Bind ViewModel.SelectedFloor, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="dto:FloorDto">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                       BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="16"
                                       Margin="0,4">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{x:Bind Name}" 
                                                  Style="{StaticResource SubtitleTextBlockStyle}"/>
                                        <TextBlock Text="{x:Bind Description}" 
                                                  Style="{StaticResource CaptionTextBlockStyle}"
                                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                  TextWrapping="Wrap"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                      Text="{x:Bind Width, Converter={StaticResource IntToSizeConverter}}" 
                                                      Style="{StaticResource CaptionTextBlockStyle}"/>
                                            <TextBlock Grid.Column="1" 
                                                      Text="{x:Bind Height, Converter={StaticResource IntToSizeConverter}}" 
                                                      Style="{StaticResource CaptionTextBlockStyle}"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>

            <!-- Floor Details -->
            <ScrollViewer Grid.Column="1" Padding="24">
                <StackPanel Spacing="24" MaxWidth="600">
                    <TextBlock Text="Floor Details" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <StackPanel Spacing="16">
                        <TextBox Header="Floor Name" 
                                Text="{x:Bind ViewModel.FloorName, Mode=TwoWay}"
                                IsEnabled="{x:Bind ViewModel.IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>
                        
                        <TextBox Header="Description" 
                                Text="{x:Bind ViewModel.FloorDescription, Mode=TwoWay}"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MinHeight="80"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <NumberBox Grid.Column="0" 
                                       Header="Width" 
                                       Value="{x:Bind ViewModel.FloorWidth, Mode=TwoWay}"
                                       Minimum="500"
                                       Maximum="5000"
                                       SmallChange="100"
                                       Margin="0,0,8,0"/>
                            
                            <NumberBox Grid.Column="1" 
                                       Header="Height" 
                                       Value="{x:Bind ViewModel.FloorHeight, Mode=TwoWay}"
                                       Minimum="500"
                                       Maximum="5000"
                                       SmallChange="100"
                                       Margin="8,0,0,0"/>
                        </Grid>

                        <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                               BorderThickness="0,1,0,0"
                               Padding="0,16,0,0">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Preview" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <Border Width="{x:Bind ViewModel.FloorWidth, Mode=OneWay, Converter={StaticResource IntToPreviewSizeConverter}}"
                                       Height="{x:Bind ViewModel.FloorHeight, Mode=OneWay, Converter={StaticResource IntToPreviewSizeConverter}}"
                                       Background="{x:Bind ViewModel.BackgroundColor, Mode=OneWay}"
                                       BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                       BorderThickness="2"
                                       CornerRadius="4"
                                       HorizontalAlignment="Left">
                                    <TextBlock Text="Floor Preview" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Style="{StaticResource CaptionTextBlockStyle}"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="1" 
                VerticalAlignment="Bottom"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="Floors: " Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.Floors.Count, Mode=OneWay}" 
                              Style="{StaticResource BodyTextBlockStyle}"/>
                    <TextBlock Text="Selected: " Style="{StaticResource CaptionTextBlockStyle}" 
                              Margin="16,0,0,0"
                              Visibility="{x:Bind ViewModel.SelectedFloor, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{x:Bind ViewModel.SelectedFloor.Name, Mode=OneWay}" 
                              Style="{StaticResource BodyTextBlockStyle}"
                              Visibility="{x:Bind ViewModel.SelectedFloor, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
                
                <ProgressRing Grid.Column="1" 
                              Width="16" Height="16" 
                              IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                              Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
